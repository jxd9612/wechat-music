/* ===============================
            发现页面 
=============================== */

/* 轮播图部分 */
.find-swiper {
    height: 360rpx;
}
.find-swiper swiper-item {
    width: 630rpx !important;
    left: 60rpx;
    box-sizing: border-box;
    padding: 20rpx 0;
    overflow: initial;
}
.find-swiper swiper-item .swiper-item {
    width: 100%;
    height: 100%;
    display: block;
    border-radius: 10rpx;
    transform: scale(0.9);
    transition: all 0.2s ease-in 0s;
    overflow: hidden;
}
.find-swiper swiper-item.cur .swiper-item {
    transform: none;
    transition: all 0.2s ease-in 0s;
}
.swiper-item image {
    width: 100%;
    height: 100%;
    display: block;
    margin: 0;
    pointer-events: none;
}

/* 菜单列表部分 */
.find-menuList {
    display: flex;
    justify-content: space-around;
    padding-bottom: 30rpx;
}
.find-menuList-item {
    width: 140rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.find-menuList-item > image {
    width: 80rpx;
    height: 80rpx;
}
.find-menuList-item > text {
    margin-top: 10rpx;
    font-size: var(--font-size-sm);
}

/* 歌单列表部分 */
.find-songList {
    padding-top: 10rpx;
}
.find-songList-head {
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-align: center;
    padding: 0 25rpx 20rpx 25rpx;
}
.head-title {
    font-size: var(--font-size-lg-l);
    font-weight: bold;
    color: var(--text-base);
}
.head-more {
    display: flex;
    align-items: center;
    color: var(--text-grey);
}
.head-more > text {
    font-size: var(--font-size-sm);
}
.find-songList-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
}
/* ====== 发现页面结束 ====== */
