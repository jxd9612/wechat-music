.container-history {
    padding: 30rpx 30rpx 0 30rpx;
}
.container-history > text {
    font-weight: bold;
    font-size: var(--font-size-lg-l);
}
.history-wrap {
    display: flex;
    flex-wrap: wrap;
    padding-top: 10rpx;
}
.history-wrap > view {
    display: inline-block;
    padding: 10rpx;
    margin: 10rpx;
    background-color: whitesmoke;
    border-radius: 10rpx;
}

.container-hot {
    padding: 30rpx;
}
.container-hot > text {
    font-weight: bold;
    font-size: var(--font-size-lg-l);
}
.hot-wrap {
    display: flex;
    align-items: center;
    padding: 10rpx 30rpx;
}
.hot-index {
    width: 60rpx;
    font-size: var(--font-size-lg);
}
.hot-content {
    display: flex;
    flex: 1 0;
    padding-right: 40rpx;
    justify-content: space-between;
}
.hot-content-left {
    width: 400rpx;
    display: flex;
    flex-direction: column;
    white-space: nowrap;
    overflow: hidden;
    font-size: var(--font-size-base);
}
.hot-content-left > text:first-child {
    font-size: var(--font-size-lg);
    font-weight: bold;
    opacity: 0.7;
}
.hot-content-left > text:last-child {
    color: var(--text-grey);
}
