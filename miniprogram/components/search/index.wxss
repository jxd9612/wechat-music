@import '../../app.wxss';

.container {
    position: relative;
    padding: 10rpx 30rpx;
    background-color: var(--bg-base);
}

/* 搜索框 */
.container-search {
    border-radius: 30rpx;
    background-color: var(--bg-grey);
}
.container-search {
    padding: 0 20rpx;
    display: flex;
    align-items: center;
}
.container-search > text {
    font-size: var(--font-size-lg-l);
    margin-right: 10rpx;
}
.container-search > input {
    height: 60rpx;
    flex: 1 0;
}

/* 搜索简介 */
.container-intro {
    position: absolute;
    top: 100%;
    left: 3%;
    width: 94%;
    box-sizing: border-box;
    box-shadow: 0rpx 3rpx 10rpx rgba(0, 0, 0, 0.3);
    padding: 20rpx;
    background-color: var(--bg-base);
    z-index: 999;
}
.intro-head {
    padding-left: 10rpx;
    margin-bottom: 20rpx;
    color: steelblue;
}
.intro-item {
    padding: 20rpx 0;
    border-top: 3rpx solid var(--bg-grey);
    color: var(--text-grey);
}
.intro-item > text:first-child {
    margin-right: 20rpx;
}
