@import '../../static/font/iconfont.wxss';

.container {
    width: 210rpx;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin: 0 10rpx 35rpx 10rpx;
}
.container-active {
    opacity: 0.7;
    transform: translate(1rpx, 1rpx);
}
.container > text {
    margin-top: 15upx;
    font-size: var(--font-size-sm);
    color: var(--text-grey);
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

/* 歌单图片背景 */
.container-img {
    position: relative;
    width: 100%;
    height: 210rpx;
}
.container-img > view {
    width: 100%;
    height: 100%;
    background-color: var(--bg-mask);
    border-radius: 10rpx;
}
.container-img > image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
    z-index: -1;
}

/* 播放次数 */
.container-playcount {
    position: absolute;
    display: flex;
    align-items: center;
    top: 10rpx;
    right: 10rpx;
    font-size: var(--font-size-sm);
    color: #fff;
}
.container-playcount text:first-child {
    font-weight: bold;
    margin-right: 5rpx;
}
